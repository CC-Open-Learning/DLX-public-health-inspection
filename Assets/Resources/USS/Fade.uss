.fade-container {
    background-color: black;
    opacity: 0;
}

.fade-in {
    transition-property: opacity;
    transition-duration: 1s;
    transition-timing-function: linear;
    opacity: 1;
}

.fade-out {
    transition-property: opacity;
    transition-duration: 1s;
    transition-timing-function: linear;
    opacity: 0;
}

.full-screen {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}
